<Page
    x:Class="StomatoloskaOrdinacija.View.Admin.AdminMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StomatoloskaOrdinacija.View.Admin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:a="using:StomatoloskaOrdinacija.ViewModel"
    mc:Ignorable="d">
    <Page.Resources>
        <a:AdminVM x:Key="osoba"/>
    </Page.Resources>

    <Grid DataContext="{Binding Source={StaticResource osoba}}">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.65"/>
                <GradientStop Color="#FF44162F" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <RelativePanel HorizontalAlignment="Center" Height="495" Margin="133,75,144,150" VerticalAlignment="Center" Width="1003">
            <RelativePanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF290A2B" Offset="0"/>
                    <GradientStop Color="#FFE6E6E6" Offset="1"/>
                </LinearGradientBrush>
            </RelativePanel.Background>
            <TextBox Text="{Binding ImeOsoblja, Mode=TwoWay}" x:Name="textBox" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Margin="29,212,-108,-212"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Ime" VerticalAlignment="Top" Width="62" Margin="82,173,-82,-173"/>
            <TextBox Text="{Binding PrezimeOsoblja, Mode=TwoWay}" x:Name="textBox_Copy" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Margin="220,212,-299,-212"/>
            <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Prezime" VerticalAlignment="Top" Width="62" Margin="259,173,-259,-173" SelectionChanged="textBlock_Copy_SelectionChanged"/>
            <TextBox Text="{Binding DatumRodjenjaOsoblja,Mode=TwoWay}" x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Margin="411,212,-520,-212"/>
            <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" Margin="443,173,-504,-173" SelectionChanged="textBlock_Copy_SelectionChanged">
            	<Run Text="Datum rođen"/>
            	<Run Text="ja"/>
            </TextBlock>
            <TextBox Text="{Binding Username,Mode=TwoWay}" x:Name="textBox_Copy2" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Margin="629,212,-708,-212"/>
            <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" Margin="660,173,-721,-173" SelectionChanged="textBlock_Copy_SelectionChanged" Text="Username"/>
            <TextBox Text="{Binding Password, Mode=TwoWay}" x:Name="textBox_Copy3" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Margin="817,212,-896,-212"/>
            <TextBlock x:Name="textBlock_Copy3" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" Margin="853,173,-914,-173" SelectionChanged="textBlock_Copy_SelectionChanged" Text="Password"/>
            <Button x:Name="button" Content="Registruj Stomatologa" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="200" Margin="198,353,-333,-353" Background="#33FFFFFF" Command="{Binding RegistrujStomatologaa, Source={StaticResource osoba}}"/>
            <Button x:Name="button1" Content="Registruj Recepcionara" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="251" Margin="512,353,-698,-353" Background="#33FFFFFF" Command="{Binding RegistrujRecepcionaraa}" CommandParameter="{Binding Source={StaticResource osoba}}"/>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Height="83" TextWrapping="Wrap" Text="ADMIN" VerticalAlignment="Top" Width="214" Margin="392,36,-544,-99" FontSize="48" Foreground="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}"/>
        </RelativePanel>
    </Grid>
</Page>
