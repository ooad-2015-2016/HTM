<Page
    x:Class="StomatoloskaOrdinacija.View.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StomatoloskaOrdinacija.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel HorizontalAlignment="Center" Height="466" VerticalAlignment="Center" Width="472" Margin="431,97,377,157">
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="278" Margin="97,130,-304,-130" PlaceholderText="Username"/>
            <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="278" Margin="97,195,-311,-195" PlaceholderText="********"/>
            <Button x:Name="button" Content="Prijava" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="65" Margin="197,337,-197,-337" Click="button_Click"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="50" TextWrapping="Wrap" Text="LOGIN" VerticalAlignment="Top" Width="116" Margin="179,35,-233,-65" FontSize="36" SelectionChanged="textBlock_SelectionChanged" Foreground="#FF4B4B4B"/>
        </RelativePanel>

    </Grid>
</Page>
